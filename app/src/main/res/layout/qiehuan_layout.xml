<LinearLayout
    android:id="@+id/relativelayout_fragment_new"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gainsboro">

        <TextView
            android:id="@+id/qiehuan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="切换栏目"
            android:textSize="17sp"/>
        <ImageView
            android:id="@+id/image_more_dakai"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:onClick="guanbi"
            android:background="@drawable/button_selector_more"
            android:src="@drawable/button_more2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
