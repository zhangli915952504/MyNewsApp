<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="120dp">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/imageview"
        android:layout_toRightOf="@+id/imageview"
        android:text="习近平三年来怎样抓作风建设"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textview_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageview"
        android:text="称我们不舒服一点、不自在一点，老百姓舒适度就好一点。"
        android:textColor="@color/dimgrey"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/textview_gentie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview"
        android:layout_alignEnd="@+id/textview_digest"
        android:layout_alignRight="@+id/textview_digest"
        android:text="跟帖"
        android:textColor="@color/dimgrey"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_gentie"
        android:layout_toLeftOf="@+id/textview_gentie"
        android:layout_toStartOf="@+id/textview_gentie"
        android:text="123123"
        android:textColor="@color/dimgrey"
        android:textSize="13sp"/>


</RelativeLayout>
